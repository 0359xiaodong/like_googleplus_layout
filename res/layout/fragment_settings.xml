<?xml version="1.0" encoding="utf-8"?>
<net.dynamicandroid.listview.DynamicListLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivorg_color" >

    <net.dynamicandroid.listview.DynamicScrollView
        android:id="@+id/dsv_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical" >

        <LinearLayout
            
            android:layout_width="match_parent"
        android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <CheckedTextView
                android:id="@+id/ctv_android"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/list_item_selector"
                android:checkMark="@drawable/checked_textview_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:padding="10dp"
              	
                android:text="只显示Android方面资讯"
                android:textColor="@drawable/text_color_selector" />
        </LinearLayout>
    </net.dynamicandroid.listview.DynamicScrollView>

</net.dynamicandroid.listview.DynamicListLayout>