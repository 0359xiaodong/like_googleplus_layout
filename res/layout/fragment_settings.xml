<?xml version="1.0" encoding="utf-8"?>
<net.dynamicandroid.listview.DynamicListLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivorg_color" >

    <net.dynamicandroid.listview.DynamicScrollView
        android:id="@+id/dsv_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:padding="10dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <CheckedTextView
                android:id="@+id/ctv_android"
                style="@style/Settings.TextView.Style"
                android:checkMark="@drawable/checked_textview_selector"
                android:clickable="true"
                android:text="只显示Android方面资讯" />

            <TextView
                android:id="@+id/tv_root"
                style="@style/Settings.TextView.Style"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="请求系统最高权限" />

            <TextView
                android:id="@+id/tv_app_grade"
                style="@style/Settings.TextView.Style"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="给程序评分" />

            <TextView
                android:id="@+id/tv_wifi"
                style="@style/Settings.TextView.Style"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="获取WIFI信息" />

            <CheckedTextView
                android:id="@+id/ctv_bus"
                style="@style/Settings.TextView.Style"
                android:layout_marginTop="10dp"
                android:checkMark="@drawable/checked_textview_selector"
                android:clickable="true"
                android:text="公交番号准确查询" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/list_item_selector"
                android:descendantFocusability="blocksDescendants" >

                <TextView
                    android:id="@+id/tv_switch"
                    style="@style/Settings.TextView.Style"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:text="仿IOS切换按钮" />

                <com.roboo.like.google.view.switchbutton.SwitchButton
                    android:id="@+id/sbtn_switch"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>
        </LinearLayout>
    </net.dynamicandroid.listview.DynamicScrollView>

</net.dynamicandroid.listview.DynamicListLayout>