<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.roboo.like.google"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.roboo.like.google.infinite.ViewPagerEx
        android:id="@+id/vp_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.roboo.like.google.views.CirclePageIndicator
        android:id="@+id/cpi_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="10dp"
        app:centered="true"
        app:fillColor="@color/sky_blue_color"
        app:strokeColor="@color/red_color"
        app:strokeWidth="1dp" />

</FrameLayout>