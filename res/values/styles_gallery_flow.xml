<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DroidUX">
        <item name="android:clipChildren">true</item>
    </style>
    <!-- GalleryFlow styles -->
    <style name="DroidUX.GalleryFlow">
        <item name="android:clipChildren">true</item>
    </style>

    <style name="DroidUX.GalleryFlow.Linear">
        <item name="dux_reflected">true</item>
        <item name="dux_cameraZ">0</item>
        <item name="dux_effectType">none</item>
        <item name="dux_floorGap">0dip</item>
        <item name="dux_reflectionStrength">0.4</item>
        <item name="dux_reflectionHeight">0.4</item>
        <item name="android:animationDuration">500</item>
        <item name="android:spacing">0dip</item>
    </style>
 
    <style name="DroidUX.GalleryFlow.Linear.Coverflow">
        <item name="dux_effectType">fade</item>
        <item name="dux_effectStrength">0.5</item>
        <item name="dux_effectDistanceFactor">0.7</item>
        <item name="android:spacing">-10dip</item>
        <item name="dux_maxRotationAngle">-60</item>
        <item name="dux_rotationAxisMode">center</item>
    </style>

    <style name="DroidUX.GalleryFlow.Linear.Zoomflow">
        <item name="dux_cameraZ">300</item>
        <item name="android:spacing">-50dip</item>
        <item name="dux_maxRotationAngle">30</item>
        <item name="dux_effectType">fade</item>
        <item name="dux_effectStrength">0.1</item>
        <item name="dux_effectDistanceFactor">0.7</item>
    </style>

    <style name="DroidUX.GalleryFlow.Linear.Trainflow">
        <item name="dux_cameraZ">400</item>
        <item name="android:spacing">-10dip</item>
        <item name="dux_maxRotationAngle">-60</item>
        <item name="dux_effectType">fade</item>
        <item name="dux_effectStrength">0.5</item>
        <item name="dux_effectDistanceFactor">0.4</item>
    </style>

    <style name="DroidUX.GalleryFlow.Linear.Scaleflow">
        <item name="dux_cameraZ">400</item>
        <item name="android:spacing">0dip</item>
        <item name="dux_maxRotationAngle">0</item>
        <item name="dux_effectType">none</item>
        <item name="dux_scale">0.75</item>
    </style>

    <style name="DroidUX.GalleryFlow.Radial">
        <item name="dux_reflected">true</item>
        <item name="dux_cameraZ">0</item>
        <item name="dux_effectType">fade</item>
        <item name="dux_effectStrength">0.4</item>
        <item name="dux_floorGap">0dip</item>
        <item name="dux_reflectionStrength">0.4</item>
        <item name="dux_reflectionHeight">0.4</item>
        <item name="android:animationDuration">500</item>
        <item name="android:spacing">10dip</item>
        <item name="dux_edgeAngle">30</item>
    </style>

    <style name="DroidUX.GalleryFlow.Radial.Out">
        <item name="dux_viewPoint">outside</item>
    </style>

    <style name="DroidUX.GalleryFlow.Radial.In">
        <item name="dux_viewPoint">inside</item>
    </style>

    <style name="DroidUX.GalleryFlow.Radial.Wall">
        <item name="dux_wallHeight">3</item>
        <item name="dux_cellSpacing">2dip</item>
        <item name="dux_reflectionStrength">0.3</item>
        <item name="dux_reflectionHeight">0.3</item>
    <!--     <item name="dux_selectorDrawable">@drawable/dux_glrflwwl_cl_bg</item> -->
    </style>

    <style name="DroidUX.GalleryFlow.Radial.Wall.Out">
        <item name="dux_viewPoint">outside</item>
    </style>

    <style name="DroidUX.GalleryFlow.Radial.Wall.In">
        <item name="dux_viewPoint">inside</item>
    </style>

</resources>