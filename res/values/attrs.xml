<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SwipeBackFrameLayout">
        <attr name="edge_size" format="dimension" />
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference" />
        <attr name="shadow_right" format="reference" />
        <attr name="shadow_bottom" format="reference" />
    </declare-styleable>

    <attr name="SwipeBackLayoutStyle" format="reference" />

    <declare-styleable name="ProgressButton">
        <attr name="textProgress" format="string" />
        <attr name="textComplete" format="string" />
        <attr name="textError" format="string" />
        <attr name="colorProgress" format="color" />
        <attr name="colorComplete" format="color" />
        <attr name="colorError" format="color" />
        <attr name="colorPressed" format="color" />
        <attr name="colorNormal" format="color" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="drawType">

            <!-- 不确定进度条，只花一条线 -->
            <enum name="progress_default" value="0"></enum>
            <!-- 进度条长度确定 -->
            <enum name="progress_progress" value="1" />
            <!-- 不确定水平进度条，高度为button高度 -->
            <enum name="progress_horizonal" value="2" />
            <!-- 不确定垂直进度条，高度为button高度 -->
            <enum name="progress_vertical" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="FooterView">
        <attr name="type">
            <enum name="progressbar_button" value="0"></enum>
            <enum name="button" value="1"></enum>
        </attr>
    </declare-styleable>

    
    
    
    <declare-styleable name="StaggeredGridView">
        <attr name="column_count" format="integer" />
        <attr name="column_count_portrait" format="integer" />
        <attr name="column_count_landscape" format="integer" />
        <attr name="item_margin" format="dimension" />
        <attr name="grid_paddingLeft" format="dimension" />
        <attr name="grid_paddingRight" format="dimension" />
        <attr name="grid_paddingTop" format="dimension" />
        <attr name="grid_paddingBottom" format="dimension" />
    </declare-styleable>
</resources>